    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Start app",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Python: Debug tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "--pdb"
            ],
            "cwd": "${workspaceFolder}",
        }
    ]
}